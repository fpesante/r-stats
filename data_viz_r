# ðŸ“ ggrepel â†’ Evita superposiciÃ³n de etiquetas
library(ggrepel)
ggplot(data, aes(x, y, label = nombre)) +
  geom_point() +
  geom_text_repel() 

# ðŸŽ¨ ggthemes â†’ Temas profesionales (Excel, Economist, Stataâ€¦)
library(ggthemes)
ggplot(data, aes(x, y)) + 
  geom_line() + 
  theme_economist() # Estilo revista The Economist

# ðŸ“ˆ gganimate â†’ GrÃ¡ficos animados
library(gganimate)
ggplot(data, aes(x, y, frame = aÃ±o)) +
  geom_point() +
  transition_time(aÃ±o) # Â¡Crea un GIF!

